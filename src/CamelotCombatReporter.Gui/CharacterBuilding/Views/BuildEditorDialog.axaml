<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CamelotCombatReporter.Gui.CharacterBuilding.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="700"
        x:Class="CamelotCombatReporter.Gui.CharacterBuilding.Views.BuildEditorDialog"
        x:DataType="vm:BuildEditorViewModel"
        Title="{Binding DialogTitle}"
        Width="700" Height="700"
        MinWidth="600" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    
    <!-- Keyboard Shortcuts -->
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}"/>
    </Window.KeyBindings>
    
    <Window.Styles>
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        <Style Selector="Border.section">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </Window.Styles>
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="16">
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding ProfileDisplayName}" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content - Scrollable -->
        <ScrollViewer Grid.Row="1" Padding="16" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Build Info Section -->
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Build Information" Classes="section-header"/>
                    <Button Grid.Column="1" 
                            Content="ðŸ“‹ Load Template"
                            Command="{Binding LoadTemplateCommand}"
                            ToolTip.Tip="Load a community meta build template"
                            Padding="12,6"
                            Margin="0,8,0,4"/>
                </Grid>
                <Border Classes="section">
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto,Auto">
                        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                 Text="{Binding BuildName}"
                                 Watermark="Build Name (e.g., RR8 Polearm Tank)"
                                 Margin="0,0,0,8"/>
                        
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Realm Rank:" VerticalAlignment="Center"/>
                            <NumericUpDown Value="{Binding RealmRank}" Minimum="1" Maximum="14" Width="80"/>
                            <TextBlock Text="L" VerticalAlignment="Center"/>
                            <NumericUpDown Value="{Binding RealmRankLevel}" Minimum="0" Maximum="9" Width="80"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{Binding RealmRankDisplay}" 
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" Margin="16,0"/>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="RP:" VerticalAlignment="Center"/>
                            <NumericUpDown Value="{Binding RealmPoints}" Minimum="0" Maximum="999999999" 
                                           Width="120" FormatString="N0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Specializations Section -->
                <TextBlock Text="Specializations" Classes="section-header"/>
                <Border Classes="section">
                    <StackPanel>
                        <!-- Points Counter -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,12">
                            <TextBlock Text="Spec Point Allocation" FontWeight="SemiBold"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Points:"/>
                                <TextBlock Text="{Binding AllocatedSpecPoints}" FontWeight="Bold"/>
                                <TextBlock Text="/"/>
                                <TextBlock Text="{Binding MaxSpecPoints}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SpecPointsRemaining, StringFormat='({0} remaining)'}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Spec Line Sliders -->
                        <ItemsControl ItemsSource="{Binding SpecLineViewModels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="120,*,60" Margin="0,4">
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                                   ToolTip.Tip="{Binding Description}"/>
                                        <Slider Grid.Column="1" 
                                                Minimum="1" Maximum="{Binding MaxLevel}"
                                                Value="{Binding Level}"
                                                TickFrequency="5" IsSnapToTickEnabled="False"
                                                Margin="8,0"/>
                                        <NumericUpDown Grid.Column="2" 
                                                       Value="{Binding Level}"
                                                       Minimum="1" Maximum="{Binding MaxLevel}"
                                                       Width="60"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Realm Abilities Section -->
                <TextBlock Text="Realm Abilities" Classes="section-header"/>
                <Border Classes="section">
                    <StackPanel>
                        <!-- RA Points Counter -->
                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,12">
                            <TextBlock Text="Realm Ability Selection" FontWeight="SemiBold"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Points:"/>
                                <TextBlock Text="{Binding AllocatedRAPoints}" FontWeight="Bold"/>
                                <TextBlock Text="/"/>
                                <TextBlock Text="{Binding MaxRAPoints}" FontWeight="Bold"/>
                            </StackPanel>
                            <Button Grid.Column="2" Content="Add RA" Command="{Binding AddRealmAbilityCommand}"
                                    Margin="16,0,0,0"/>
                        </Grid>
                        
                        <!-- Selected RAs -->
                        <ItemsControl ItemsSource="{Binding SelectedRealmAbilities}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,80,60,Auto" Margin="0,2">
                                        <TextBlock Text="{Binding AbilityName}" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="Rank:" VerticalAlignment="Center"/>
                                            <NumericUpDown Value="{Binding Rank}" 
                                                           Minimum="1" Maximum="{Binding MaxRank}"
                                                           Width="50"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding PointCost, StringFormat='({0} pts)'}"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        <Button Grid.Column="3" Content="âœ•" 
                                                Command="{Binding $parent[ItemsControl].((vm:BuildEditorViewModel)DataContext).RemoveRealmAbilityCommand}"
                                                CommandParameter="{Binding}"
                                                Width="24" Height="24" Padding="0"
                                                ToolTip.Tip="Remove ability"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <TextBlock Text="No realm abilities selected" 
                                   IsVisible="{Binding !SelectedRealmAbilities.Count}"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontStyle="Italic" Margin="0,8"/>
                    </StackPanel>
                </Border>
                
                <!-- Notes Section -->
                <TextBlock Text="Notes" Classes="section-header"/>
                <Border Classes="section">
                    <TextBox Text="{Binding Notes}" AcceptsReturn="True" 
                             TextWrapping="Wrap" Height="80"
                             Watermark="Optional notes about this build..."/>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="16">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock Text="{Binding ValidationMessage}" 
                           Foreground="Orange" VerticalAlignment="Center"
                           IsVisible="{Binding HasValidationWarning}"/>
                
                <Button Grid.Column="1" Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Width="100" Margin="8,0"/>
                <Button Grid.Column="2" Content="Save as New" 
                        Command="{Binding SaveAsNewCommand}"
                        IsVisible="{Binding IsEditing}"
                        Width="100" Margin="8,0"/>
                <Button Grid.Column="3" Content="Save" 
                        Command="{Binding SaveCommand}"
                        Classes="accent"
                        Width="100"/>
            </Grid>
        </Border>
    </Grid>
</Window>
