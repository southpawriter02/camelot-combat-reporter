<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================== -->
    <!-- CAMELOT COMBAT REPORTER - STYLE TEMPLATES                         -->
    <!-- ================================================================== -->
    <!-- Reusable control styles for consistent UI appearance.             -->
    <!-- Note: Use hardcoded colors here since Styles can't reference      -->
    <!-- ResourceDictionary resources directly.                            -->
    <!-- ================================================================== -->

    <!-- ================================================================== -->
    <!-- BUTTON STYLES                                                     -->
    <!-- ================================================================== -->

    <!-- Primary Button - Main action button -->
    <Style Selector="Button.Primary">
        <Setter Property="Background" Value="#1E88E5"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="Button.Primary:pointerover">
        <Setter Property="Background" Value="#1565C0"/>
    </Style>
    <Style Selector="Button.Primary:pressed">
        <Setter Property="Background" Value="#1565C0"/>
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- Secondary Button - Secondary action -->
    <Style Selector="Button.Secondary">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="Button.Secondary:pointerover">
        <Setter Property="Background" Value="#EEEEEE"/>
    </Style>

    <!-- Success Button - Positive actions -->
    <Style Selector="Button.Success">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="Button.Success:pointerover">
        <Setter Property="Background" Value="#388E3C"/>
    </Style>

    <!-- Danger Button - Destructive actions -->
    <Style Selector="Button.Danger">
        <Setter Property="Background" Value="#F44336"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="Button.Danger:pointerover">
        <Setter Property="Background" Value="#D32F2F"/>
    </Style>

    <!-- Warning Button -->
    <Style Selector="Button.Warning">
        <Setter Property="Background" Value="#FFC107"/>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="Button.Warning:pointerover">
        <Setter Property="Background" Value="#FFA000"/>
    </Style>

    <!-- Link Button - Text-only button -->
    <Style Selector="Button.Link">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#1E88E5"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.Link:pointerover">
        <Setter Property="Foreground" Value="#1565C0"/>
    </Style>

    <!-- Icon Button - Small square button for icons -->
    <Style Selector="Button.Icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="Button.Icon:pointerover">
        <Setter Property="Background" Value="#F5F5F5"/>
    </Style>

    <!-- ================================================================== -->
    <!-- TEXT STYLES                                                       -->
    <!-- ================================================================== -->

    <!-- Display Text - Large headers -->
    <Style Selector="TextBlock.Display">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Header Text - Section headers -->
    <Style Selector="TextBlock.Header">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Title Text - Subsection headers -->
    <Style Selector="TextBlock.Title">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Subtitle Text -->
    <Style Selector="TextBlock.Subtitle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Body Text - Default -->
    <Style Selector="TextBlock.Body">
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Caption Text - Small labels -->
    <Style Selector="TextBlock.Caption">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="#757575"/>
    </Style>

    <!-- Muted Text - Secondary content -->
    <Style Selector="TextBlock.Muted">
        <Setter Property="Foreground" Value="#9E9E9E"/>
    </Style>

    <!-- ================================================================== -->
    <!-- CARD STYLES                                                       -->
    <!-- ================================================================== -->

    <!-- Base Card - Content container -->
    <Style Selector="Border.Card">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <!-- Elevated Card - With shadow effect -->
    <Style Selector="Border.CardElevated">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #20000000"/>
    </Style>

    <!-- Primary Card - Highlighted container -->
    <Style Selector="Border.CardPrimary">
        <Setter Property="Background" Value="#BBDEFB"/>
        <Setter Property="BorderBrush" Value="#1E88E5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <!-- ================================================================== -->
    <!-- STAT CARD STYLES                                                  -->
    <!-- ================================================================== -->

    <!-- Stat Card - For statistics display -->
    <Style Selector="Border.StatCard">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinWidth" Value="100"/>
    </Style>

    <!-- Stat Value - Large number display -->
    <Style Selector="TextBlock.StatValue">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#1E88E5"/>
    </Style>

    <!-- Stat Label - Description below value -->
    <Style Selector="TextBlock.StatLabel">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="#757575"/>
    </Style>

    <!-- ================================================================== -->
    <!-- BADGE STYLES                                                      -->
    <!-- ================================================================== -->

    <!-- Primary Badge -->
    <Style Selector="Border.BadgePrimary">
        <Setter Property="Background" Value="#1E88E5"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Success Badge -->
    <Style Selector="Border.BadgeSuccess">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Warning Badge -->
    <Style Selector="Border.BadgeWarning">
        <Setter Property="Background" Value="#FFC107"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Error Badge -->
    <Style Selector="Border.BadgeError">
        <Setter Property="Background" Value="#F44336"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- ================================================================== -->
    <!-- ALERT PRIORITY BADGES                                             -->
    <!-- ================================================================== -->

    <Style Selector="Border.AlertCritical">
        <Setter Property="Background" Value="#D32F2F"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.AlertHigh">
        <Setter Property="Background" Value="#F57C00"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.AlertMedium">
        <Setter Property="Background" Value="#FBC02D"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.AlertLow">
        <Setter Property="Background" Value="#388E3C"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <!-- ================================================================== -->
    <!-- SECTION HEADER STYLE                                              -->
    <!-- ================================================================== -->

    <Style Selector="Border.SectionHeader">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- ================================================================== -->
    <!-- STATUS INDICATOR STYLES                                           -->
    <!-- ================================================================== -->

    <Style Selector="Ellipse.StatusDot">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style Selector="Ellipse.StatusOnline">
        <Setter Property="Fill" Value="#4CAF50"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style Selector="Ellipse.StatusOffline">
        <Setter Property="Fill" Value="#9E9E9E"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style Selector="Ellipse.StatusBusy">
        <Setter Property="Fill" Value="#FF9800"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <!-- ================================================================== -->
    <!-- PROGRESS BAR STYLES                                               -->
    <!-- ================================================================== -->

    <Style Selector="ProgressBar.Primary">
        <Setter Property="Foreground" Value="#1E88E5"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="MinHeight" Value="8"/>
    </Style>

    <Style Selector="ProgressBar.Success">
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="MinHeight" Value="8"/>
    </Style>

    <Style Selector="ProgressBar.Warning">
        <Setter Property="Foreground" Value="#FFC107"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="MinHeight" Value="8"/>
    </Style>

    <Style Selector="ProgressBar.Error">
        <Setter Property="Foreground" Value="#F44336"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="MinHeight" Value="8"/>
    </Style>

    <!-- ================================================================== -->
    <!-- DATA GRID STYLES                                                  -->
    <!-- ================================================================== -->

    <Style Selector="DataGrid.Styled">
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <!-- ================================================================== -->
    <!-- TAB ITEM STYLES                                                   -->
    <!-- ================================================================== -->

    <Style Selector="TabItem.MainTab">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ================================================================== -->
    <!-- SEPARATOR STYLES                                                  -->
    <!-- ================================================================== -->

    <Style Selector="Separator.Horizontal">
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>

    <Style Selector="Separator.Vertical">
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>

    <!-- ================================================================== -->
    <!-- TOOLTIP STYLES                                                    -->
    <!-- ================================================================== -->

    <Style Selector="ToolTip">
        <Setter Property="Background" Value="#424242"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>

    <!-- ================================================================== -->
    <!-- QUICK STATS BAR STYLE                                             -->
    <!-- ================================================================== -->

    <Style Selector="Border.QuickStatsBar">
        <Setter Property="Background" Value="#1E88E5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>

    <!-- ================================================================== -->
    <!-- REALM COLOR BADGES                                                -->
    <!-- ================================================================== -->

    <Style Selector="Border.RealmAlbion">
        <Setter Property="Background" Value="#E53935"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.RealmMidgard">
        <Setter Property="Background" Value="#1E88E5"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.RealmHibernia">
        <Setter Property="Background" Value="#43A047"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

</Styles>
