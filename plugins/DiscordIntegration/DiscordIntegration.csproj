<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AssemblyName>DiscordIntegration</AssemblyName>
    <RootNamespace>DiscordIntegration</RootNamespace>
  </PropertyGroup>

  <!-- SDK and Core References -->
  <ItemGroup>
    <ProjectReference Include="../../src/CamelotCombatReporter.Core/CamelotCombatReporter.Core.csproj" />
    <ProjectReference Include="../../src/CamelotCombatReporter.Plugins/CamelotCombatReporter.Plugins.csproj" />
    <ProjectReference Include="../../src/CamelotCombatReporter.PluginSdk/CamelotCombatReporter.PluginSdk.csproj" />
  </ItemGroup>

  <!-- Logging -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.0" />
  </ItemGroup>

  <!-- Avalonia UI (for settings panel) -->
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.3" />
  </ItemGroup>

  <!-- Content files -->
  <ItemGroup>
    <None Update="plugin.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
